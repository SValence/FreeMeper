<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <set>
            <objectAnimator android:duration="0" android:propertyName="translationZ" android:valueTo="3dp" android:valueType="floatType" />
            <objectAnimator android:duration="0" android:propertyName="scaleY" android:valueTo="1.025" android:valueType="floatType" />
            <objectAnimator android:duration="0" android:propertyName="scaleX" android:valueTo="1.025" android:valueType="floatType" />
        </set>
    </item>
    <item android:state_focused="true">
        <set>
            <objectAnimator android:duration="0" android:propertyName="translationZ" android:valueTo="3dp" android:valueType="floatType" />
            <objectAnimator android:duration="0" android:propertyName="scaleY" android:valueTo="1.025" android:valueType="floatType" />
            <objectAnimator android:duration="0" android:propertyName="scaleX" android:valueTo="1.025" android:valueType="floatType" />
        </set>
    </item>
    <item>
        <set>
            <objectAnimator android:duration="500" android:propertyName="translationZ" android:valueTo="0dp" android:valueType="floatType" />
            <objectAnimator android:duration="500" android:propertyName="scaleY" android:valueTo="1.0" android:valueType="floatType" />
            <objectAnimator android:duration="500" android:propertyName="scaleX" android:valueTo="1.0" android:valueType="floatType" />
        </set>
    </item>
</selector>
