<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150sp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_free_main_popup_menu"
    android:orientation="vertical">

    <TextView
        android:id="@+id/mainPopMenuSetting"
        android:layout_width="150sp"
        android:layout_height="40sp"
        android:background="@drawable/bg_free_ripple_menu_item"
        android:gravity="center_vertical"
        android:paddingEnd="0sp"
        android:paddingStart="5sp"
        android:text="@string/free_setting"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/mainPopMenuAbout"
        android:layout_width="150sp"
        android:layout_height="40sp"
        android:background="@drawable/bg_free_ripple_menu_item"
        android:gravity="center_vertical"
        android:paddingEnd="0sp"
        android:paddingStart="5sp"
        android:text="@string/free_about"
        android:textColor="@color/black"
        android:textSize="18sp" />
</LinearLayout>
